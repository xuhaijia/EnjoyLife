<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_songsin_name"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:singleLine="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="12dp"
        android:layout_marginTop="3dp"
        android:id="@+id/item_songsin_time"
        android:layout_alignLeft="@+id/item_songsin_name"
        android:layout_below="@+id/item_songsin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/item_songsin_play"
        android:src="@mipmap/music_play"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>