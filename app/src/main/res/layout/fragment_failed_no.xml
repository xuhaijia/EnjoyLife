<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_suddeed_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_myself_myphoto_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@mipmap/ic_myself_loginphoto" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/jiushi"
            android:layout_below="@id/fragment_myself_myphoto_2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
            <TextView
                android:id="@+id/fragment_login_denglu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1f2ce6"
                android:text="立即登录"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/fragment_myself_username_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jiushi"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/darker_gray"
            android:text="享EnjoyLife 用户专有福利"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>