<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_hotmusician_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        />
    <TextView
        android:id="@+id/item_hotmusician_name"
        android:text="name"
        android:layout_toRightOf="@id/item_hotmusician_icon"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_hotmusician_style"
        android:layout_below="@id/item_hotmusician_name"
        android:layout_alignLeft="@id/item_hotmusician_name"
        android:text="style"
        android:singleLine="true"
        android:textSize="12dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="care"
        android:textSize="13dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/item_hotmusician_care"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>