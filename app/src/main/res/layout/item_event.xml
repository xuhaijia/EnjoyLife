<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/item_event_zw"
        android:background="#000000"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/item_event_month"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:text="7æœˆ"
        android:textColor="#ffffff"
        android:textSize="8dp"/>

    <TextView
        android:id="@+id/item_event_day"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="18"
        android:textColor="#ffffff"
        android:textSize="18dp"/>

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/item_event_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/item_event_zw"/>

    <TextView
        android:id="@+id/item_event_title"
        android:layout_toRightOf="@+id/item_event_icon"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_width="230dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_event_time"
        android:layout_below="@+id/item_event_title"
        android:layout_alignLeft="@+id/item_event_title"
        android:layout_width="wrap_content"
        android:textSize="9dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>