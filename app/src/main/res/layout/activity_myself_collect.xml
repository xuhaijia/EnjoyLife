<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="我的收藏"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:gravity="center"/>
    <RadioGroup
        android:background="#30a1a1a1"
        android:id="@+id/fragment_myself_collectss"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/fragment_myself_musician_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_font"
            android:text="音乐" />

        <RadioButton
            android:id="@+id/fragment_myself_classic_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_font"
            android:text="景点" />

        <RadioButton
            android:id="@+id/fragment_myself_content_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/selector_font"
            android:gravity="center"
            android:text="美文" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragment_myself_collectlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
</LinearLayout>