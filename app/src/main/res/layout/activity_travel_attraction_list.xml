<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_travel_attraction_list_imager"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="200dp"
                android:background="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"

                android:text="香港海洋公园"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_title_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"

                android:text="HongKong"
                android:textSize="17sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"

                android:text="简介"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="简介内容" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="地址"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"

                android:text="香港港岛南区黄竹坑" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="交通"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"

                android:text="22路车" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="门票"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_entrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"

                android:text="城市..." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="电话"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"

                android:text="12346" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="开放时间"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"

                android:text="2013年1月5日" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="游玩时间"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_travel_attraction_list_text_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"

                android:text="建议5-7小时" />
        </LinearLayout>


    </ScrollView>


</LinearLayout>